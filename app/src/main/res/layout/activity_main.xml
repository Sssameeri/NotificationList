<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:notificationApplication="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:background="@color/backgroundColor"
    >

    <include
        android:id="@+id/appBar"
        layout="@layout/app_bar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notificationsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        notificationApplication:layout_constraintBottom_toTopOf="@+id/startService"
        notificationApplication:layout_constraintEnd_toEndOf="parent"
        notificationApplication:layout_constraintStart_toStartOf="parent"
        notificationApplication:layout_constraintTop_toTopOf="@+id/noItemsLayout"
        tools:listitem="@layout/notification_item"
        />

    <include
        android:id="@+id/noItemsLayout"
        layout="@layout/layout_mock"
        notificationApplication:layout_constraintBottom_toBottomOf="parent"
        notificationApplication:layout_constraintEnd_toEndOf="parent"
        notificationApplication:layout_constraintStart_toStartOf="parent"
        notificationApplication:layout_constraintTop_toTopOf="@+id/appBar"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startService"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:backgroundTint="@android:color/black"
        android:text="@string/start"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        notificationApplication:cornerRadius="50dp"
        notificationApplication:layout_constraintBottom_toBottomOf="parent"
        notificationApplication:layout_constraintEnd_toEndOf="parent"
        notificationApplication:layout_constraintHorizontal_bias="0.558"
        notificationApplication:layout_constraintStart_toStartOf="parent"
        notificationApplication:layout_constraintTop_toTopOf="@+id/noItemsLayout"
        notificationApplication:layout_constraintVertical_bias="0.97" />

</androidx.constraintlayout.widget.ConstraintLayout>